[satellite]
<%= @satellite_fqdn %> ansible_user=vagrant ansible_ssh_pass=vagrant

<% if @deployment.deploy_rhev && !@deployment.rhev_is_self_hosted%>
[rhv-engine]
<%= @rhv_engine_fqdn %>


[rhv-hypervisors]
<% for fqdn in @rhv_hypervisor_fqdn_list %>
<%= fqdn %>
<% end %>


[rhv-hosts:children]
rhv-engine
rhv-hypervisors

[rhv-hosts:vars]
ansible_user=root
ansible_ssh_pass=<%= @deployment.rhev_root_password%>

<% end %>
